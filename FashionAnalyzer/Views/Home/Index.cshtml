@{
    ViewBag.Title = "Home Page";
}
<p>&nbsp;</p>

<div class="jumbotron">
    <h1>Twitter Fashion Analyzer</h1>
    <p class="lead">Twitter Fashion Analyzer is an online tool for listening to tweets with specific hashtags, once a tweet is found it's parsed for images then the images gets checked for faces, the image is then shown with the amount of faces and what gender they have.</p>
</div>

<div class="form-group">
    <label>Hashtag filter:</label>
    <input id="inpHashtagFilter" type="text" class="form-control">
</div>

<div class="container">
    <dl>
        <dt>Status</dt>
        <dd id="streamStatus"></dd>
        <dt>Stats</dt>
        <dd id="streamStats"></dd>
    </dl>
</div>

<div class="btn-group">
    <button id="startStream" class="btn btn-success">
        <span class="glyphicon glyphicon-play"></span> Start Stream
    </button>
    <button id="stopStream" class="btn btn-danger">
        <span class="glyphicon glyphicon-stop"></span> Stop Stream
    </button>
</div>
<br />
<!-- Container for all the processed images -->
<div id="tweet-container" class="row tweets">
</div>


@section scripts
{
        <script src="~/Scripts/jquery-1.10.2.min.js"></script>
        <script src="~/Scripts/jquery.signalR-2.2.3.min.js"></script>
        <script src="~/Scripts/bootstrap.min.js"></script>
        <script src="/signalr/hubs"></script>
        <script src="~/Scripts/twitterLive.js"></script>
    }
